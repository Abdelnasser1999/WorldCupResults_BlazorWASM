<li class="list-group-item">
    <div class="row">
        <div class="col-sm-4 d-flex justify-content-center align-itmes-center text-center">
            <span class="flag">
                <img style="width: 40px; height: 40px"
                     class="rounded-circle"
                     src="@Row.team.crest" alt="">
            </span>

            <h5 style="margin: auto 4px">
                <b>@Row.team.tla</b>
            </h5>
        </div>

        <div class="col-sm-2 text-center">
            @Row.won
        </div>

        <div class="col-sm-2 text-center">
            @Row.lost
        </div>

        <div class="col-sm-2 text-center">
            @Row.draw
        </div>

        <div class="col-sm-2 text-center">
            <b>@Row.points</b>
        </div>
    </div>
</li>
@code {
	[Parameter]
	public GroupTable Row { get; set; }
}
